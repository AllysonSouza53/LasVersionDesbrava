<Gerenciador>:
    TelaEscolha:
        name: "Escolha"
    TelaLoginProfissionais:
        name: "LoginProfissional"
    TelaCadastroProfissional:
        name:"CadastroProfissional"

<TelaEscolha>:
    MDFloatLayout:
        canvas.before:
            # Desenha o fundo
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                source: 'Imagens/Fundo.png'
                size: self.size
                pos: self.pos

            # Desenha o retângulo com bordas arredondadas
            Color:
                rgba: 0, 0, 0, app.resp.Transp_Back
            RoundedRectangle:
                size: self.width * 0.3, self.width * 0.3
                pos: self.center_x - self.width * 0.15, self.center_y - self.width * 0.15
                radius: [20]

        canvas:
            # Desenha o logo
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                source: 'Imagens/Logo.png'
                size: app.resp.Size_x_Logo,app.resp.Size_y_Logo
                pos: self.center_x - self.width * 0.48, self.center_y - self.height * -0.27

        MDRaisedButton:
            id:'EscolhaAlunosButton'
            text: 'Aluno'
            pos_hint: {'center_x': app.resp.Pos_x_btn1, 'center_y': app.resp.Pos_y_btn1}
            size_hint_x: 0.1
            size_hint_y: 0.08
            md_bg_color: 0.0, 0.4, 0.0, 1
            font_size: app.resp.FontSize
            bold: True
            on_release: root.irLoginAluno()
            line_color: 1, 1, 1, 1  # Cor da borda (verde)

        MDRaisedButton:
            id: 'EscolhaProfissionalButton'
            text: 'Profissional'
            pos_hint: {'center_x': app.resp.Pos_x_btn2, 'center_y': app.resp.Pos_y_btn2}
            size_hint_x: 0.1
            size_hint_y: 0.08
            md_bg_color: 0.0, 0.4, 0.0, 1
            font_size: app.resp.FontSize
            bold: True
            on_release: root.EscolhaProfissionalButton_Click()
            line_color: 1, 1, 1, 1

<TelaLoginProfissionais>:
    MDFloatLayout:
        canvas.before:
            # Desenha o fundo
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                source: 'Imagens/Fundo.png'
                size: self.size
                pos: self.pos

            # Desenha o retângulo com bordas arredondadas
            Color:
                rgba: 0, 0, 0, 0.5
            RoundedRectangle:
                size: self.width * app.resp.Size_x_Fundo_1, self.height * 0.5
                pos: self.center_x - self.width * app.resp.Pos_x_Fundo_1, self.center_y - self.height * 0.25
                radius: [20]

        canvas:
            # Desenha o logo
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                source: 'Imagens/Logo.png'
                size: app.resp.Size_x_Logo,app.resp.Size_y_Logo
                pos: self.center_x - self.width * 0.48, self.center_y - self.height * -0.27

        MDRectangleFlatIconButton:
            id:'VoltarEscolhaButton'
            text: "Voltar"
            icon: "arrow-left"
            md_bg_color: 0.0, 0.4, 0.0, 1
            font_size: "18sp"
            bold: True
            on_release: root.VoltarEscolhaButton_Click()
            size_hint: None, None
            size: "200dp", "50dp"
            pos_hint: {"right": 0.98, "top": 0.98}
            text_color: 1, 1, 1, 1
            icon_color: 1, 1, 1, 1
            line_color: 1, 1, 1, 1

        MDLabel:
            text:app.resp.Text_Title
            color:1,1,1,1
            font_size: app.resp.FontSize_Title
            bold: True
            halign: 'center'
            pos_hint: {"center_y": 0.7}

        MDLabel:
            text:'Usuario:'
            color:1,1,1,1
            font_size: "16sp"
            bold: True
            pos_hint: {'center_x': app.resp.Pos_x_Label_1, 'center_y': app.resp.Pos_y_Label_1}

        MDTextField:
            id: lbl_ProfissionalUsuario
            hint_text: "Digite Seu Usuario"
            mode: "round"
            size_hint_x: app.resp.Size_x_TextInput
            pos_hint: {"center_x":0.5, 'center_y':0.6}
            line_color_normal: 0, 0, 0, 0.5
            line_color_focus: 0.72, 0.53, 0.04, 1
            text_color_normal:0,0,0,1
            text_color_focus:0,0,0,1
            cursor_color:0,0,0,1

        MDLabel:
            text:'Senha:'
            color:1,1,1,1
            font_size: "16sp"
            bold: True
            pos_hint: {'center_x': app.resp.Pos_x_Label_2, 'center_y': app.resp.Pos_y_Label_2}

        MDTextField:
            id: lbl_ProfissionalSenha
            hint_text: "Digite sua Senha"
            mode: "round"
            size_hint_x: app.resp.Size_x_TextInput
            pos_hint: {"center_x":0.5, 'center_y':0.5}
            line_color_normal: 0, 0, 0, 0.5
            line_color_focus: 0.72, 0.53, 0.04, 1
            text_color_normal:0,0,0,1
            text_color_focus:0,0,0,1
            cursor_color:0,0,0,1

        MDRaisedButton:
            id:'ParaCadastroProfissionaisButton'
            text: app.resp.Text_SubLabel
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}
            size_hint_x: 0.06
            size_hint_y: 0.06
            md_bg_color: 0, 0, 0, 0
            font_size: "12sp"
            on_release: root.ParaCadastroProfissionaisButton_Click()

        MDRaisedButton:
            id: 'EntrarButton'
            text: 'Entrar'
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            size_hint_x: 0.06
            size_hint_y: 0.06
            md_bg_color: 0.0, 0.4, 0.0, 1
            font_size: "18sp"
            bold: True
            on_release: root.LoginProfissionais_Click()
            line_color: 1, 1, 1, 1

<TelaCadastroProfissional>:
    MDFloatLayout:
        canvas.before:
            # Desenha o fundo
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                source: 'Imagens/Fundo.png'
                size: self.size
                pos: self.pos

            # Desenha o retângulo com bordas arredondadas
            Color:
                rgba: 0, 0, 0, 0.5
            RoundedRectangle:
                size: self.width * 0.3, self.height * 0.6
                pos: self.center_x - self.width * 0.15, self.center_y - self.height * 0.30
                radius: [20]

        canvas:
            # Desenha o logo
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                source: 'Imagens/Logo.png'
                size: app.resp.Size_x_Logo,app.resp.Size_y_Logo
                pos: self.center_x - self.width * 0.48, self.center_y - self.height * -0.27

        MDFloatLayout:
            MDRectangleFlatIconButton:
                id: 'VoltarLoginButton'
                text: "Voltar"
                icon: "arrow-left"
                md_bg_color: 0.0, 0.4, 0.0, 1
                font_size: "18sp"
                bold: True
                on_release: root.VoltarEscolhaButton_Click()
                size_hint: None, None
                size: "200dp", "50dp"
                pos_hint: {"right": 0.98, "top": 0.98}
                text_color: 1, 1, 1, 1
                icon_color: 1, 1, 1, 1
                line_color: 1, 1, 1, 1

            MDLabel:
                text:'Cadastre-se um Profissional!'
                color:1,1,1,1
                font_size: app.resp.FontSize_Title
                bold: True
                halign: 'center'
                pos_hint: {"center_y": 0.75}

            MDLabel:
                id: 'CPFCadastroLabel'
                text:'CPF:'
                color:1,1,1,1
                font_size: "16sp"
                bold: True
                pos_hint: {'center_x': app.resp.Pos_x_CPFCadastroLabel, 'center_y': app.resp.Pos_y_CPFCadastroLabel}

            MDTextField:
                id: lbl_CPFCadastroProfissional
                hint_text: "Digite seu CPF"
                mode: "round"
                size_hint_x: app.resp.Size_x_TextInput
                pos_hint: {"center_x":0.5, 'center_y':0.668}
                line_color_normal: 0, 0, 0, 0.5
                line_color_focus: 0.72, 0.53, 0.04, 1
                text_color_normal:0,0,0,1
                text_color_focus:0,0,0,1
                cursor_color:0,0,0,1
                on_text: app.formatar_cpf(self)

            MDLabel:
                text:'Nome Completo:'
                color:1,1,1,1
                font_size: "16sp"
                bold: True
                pos_hint: {'center_x': 0.88, 'center_y': 0.6}

            MDTextField:
                id: lbl_NomeCadastroProfissional
                hint_text: "Digite seu Nome Completo"
                mode: "round"
                size_hint_x: app.resp.Size_x_TextInput
                pos_hint: {"center_x":0.5, 'center_y':0.568}
                line_color_normal: 0, 0, 0, 0.5
                line_color_focus: 0.72, 0.53, 0.04, 1
                text_color_normal:0,0,0,1
                text_color_focus:0,0,0,1
                cursor_color:0,0,0,1

            MDLabel:
                text:'Usuario:'
                color:1,1,1,1
                font_size: "16sp"
                bold: True
                pos_hint: {'center_x': 0.88, 'center_y': 0.5}

            MDTextField:
                id: lbl_UsuarioCadastroProfissional
                hint_text: "Digite seu Usuario"
                mode: "round"
                size_hint_x: app.resp.Size_x_TextInput
                pos_hint: {"center_x":0.5, 'center_y':0.468}
                line_color_normal: 0, 0, 0, 0.5
                line_color_focus: 0.72, 0.53, 0.04, 1
                text_color_normal:0,0,0,1
                text_color_focus:0,0,0,1
                cursor_color:0,0,0,1

            MDLabel:
                text:'Profissão:'
                color:1,1,1,1
                font_size: "16sp"
                bold: True
                pos_hint: {'center_x': 0.88, 'center_y': 0.4}

            MDTextField:
                id: List_ProfissoesText
                hint_text: "Selecione uma Profissão"
                mode: "round"
                size_hint_x: app.resp.Size_x_TextInput
                pos_hint: {"center_x":0.5, 'center_y':0.368}
                line_color_normal: 0, 0, 0, 0.5
                line_color_focus: 0.72, 0.53, 0.04, 1
                text_color_normal:0,0,0,1
                text_color_focus:0,0,0,1
                cursor_color:0,0,0,1
                on_focus:app.ListaProfissõesText_Click(self, self.focus)

            MDDropDownItem:
                id: 'List_ProfissoesBotao'
                pos_hint: {"center_x": app.resp.Pos_x_List_ProfissoesBotao, "center_y": 0.368}
                on_release: app.ListaProfissõesBotao_Click(self)

            MDRaisedButton:
                text: 'Já tem conta! Conecte-se'
                pos_hint: {'center_x': 0.5, 'center_y': 0.25}
                size_hint_x: 0.06
                size_hint_y: 0.06
                md_bg_color: 0, 0, 0, 0
                font_size: "12sp"
                on_release: app.irLoginProfissional()

            MDRaisedButton:
                text: 'Continuar'
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                size_hint_x: 0.06
                size_hint_y: 0.06
                md_bg_color: 0.0, 0.4, 0.0, 1
                font_size: "18sp"
                bold: True
                on_release: app.irCadastroProfissional2()
                line_color: 1, 1, 1, 1
